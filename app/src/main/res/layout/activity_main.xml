<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/flashcard_question"
        android:background="@drawable/border"
        android:textColor="@color/white"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:gravity="center"
        android:text="What club does Messi play for?"
        android:textSize="35sp" />

    <TextView
        android:id="@+id/flashcard_answer"
        android:layout_width="match_parent"
        android:background="@drawable/secondborder"
        android:textColor="@color/white"
        android:layout_height="200dp"
        android:gravity="center"
        android:text="PSG"
        android:textSize="35sp"
        android:visibility="invisible" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="-362dp">

        <ImageView
            android:id="@+id/nextbutton"
            android:layout_width="81dp"
            android:layout_height="101dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="50dp"
            android:layout_marginTop="558dp"
            android:layout_marginEnd="278dp"
            android:src="@drawable/nextbutton" />

        <ImageView
            android:id="@+id/trash"
            android:layout_width="68dp"
            android:layout_height="91dp"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="140dp"
            android:layout_marginTop="558dp"
            android:layout_marginEnd="159dp"
            android:src="@drawable/trash" />
    </RelativeLayout>

    <TextView
        android:id="@+id/button1"
        android:layout_width="300dp"
        android:background="@drawable/border"
        android:layout_height="wrap_content"
        android:layout_below="@+id/flashcard_answer"
        android:layout_centerInParent="true"
        android:layout_marginTop="131dp"
        android:textAlignment="center"
        android:text="Barcelona" />
    <TextView
        android:id="@+id/button2"
        android:layout_width="300dp"
        android:background="@drawable/border"
        android:layout_height="55dp"
        android:layout_below="@+id/button1"
        android:layout_centerInParent="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="10dp"
        android:text="PSG"
        android:textAlignment="center"/>

    <TextView
        android:id="@+id/button3"
        android:background="@drawable/border"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button2"
        android:layout_centerInParent="true"
        android:textAlignment="center"
        android:layout_centerVertical="true"
        android:layout_marginTop="10dp"
        android:text="Man City" />

    <ImageView
        android:id="@+id/add_question_button"
        android:layout_width="67dp"
        android:layout_height="58dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="38dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="38dp"
        android:src="@drawable/add_icon"/>

</RelativeLayout>